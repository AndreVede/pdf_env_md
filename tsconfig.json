{
    "compilerOptions": {
        "outDir": "./build/",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"]
        },
        "noImplicitAny": true,
        "module": "ES2022",
        "target": "ES2016",
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["**/*.spec.ts"]
}
